<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_background_img"
    android:orientation="vertical"
    tools:context=".Fragment_home">

    //홈 프래그먼트 화면

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        >

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/home_icon_setting">

        </ImageButton>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="120dp"
            android:text="HOME"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold"

            >

        </TextView>

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/alarm_icon">

        </ImageButton>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="75dp"
        android:layout_width="315dp"
        android:layout_height="170dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/home_backimg_itembuy2"
        android:gravity="center"
        >

        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/round_btn"
            android:layout_marginTop="10dp"
            android:drawableTop="@drawable/spot_resize"
            android:paddingTop="15dp"
            android:paddingBottom="10dp"
            android:text="위치"
            android:textSize="14dp"
            android:fontFamily="@font/notosansregular"
            android:textColor="#505050"
            />

        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/round_btn"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:drawableTop="@drawable/product_resize"
            android:paddingTop="12dp"
            android:paddingBottom="10dp"
            android:text="제품"
            android:textSize="14dp"
            android:fontFamily="@font/notosansregular"
            android:textColor="#505050"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="315dp"
        android:layout_height="203dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/quickservice"
        android:paddingBottom="7dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="164dp"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/round_btn2"
                android:layout_marginTop="10dp"
                android:drawableTop="@drawable/scan_resize"
                android:paddingTop="15dp"
                android:paddingBottom="10dp"
                android:text="용기스캔"
                android:textSize="14dp"
                android:fontFamily="@font/notosansregular"
                android:textColor="#FFFFFF"
                />
            <TextView
                android:layout_width="117dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:text="AR로 용기를 인식해\n예상금액을 알 수 있어요"
                android:fontFamily="@font/notosansregular"
                android:textColor="#A6A6A6"
                android:gravity="center"
                android:textSize="11dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="164dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="40dp"
            android:orientation="vertical">

            <Button
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/round_btn2"
                android:layout_marginTop="10dp"
                android:drawableTop="@drawable/qr_resize"
                android:paddingTop="15dp"
                android:paddingBottom="10dp"
                android:text="유통기한"
                android:textSize="14dp"
                android:fontFamily="@font/notosansregular"
                android:textColor="#FFFFFF"
                />
            <TextView
                android:layout_width="117dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:text="리필 제품의 유통기한을\n쉽게 등록할 수 있어요"
                android:fontFamily="@font/notosansregular"
                android:textColor="#A6A6A6"
                android:gravity="center"
                android:textSize="11dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="315dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="#80505050"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:padding="10dp"
            android:text="매장 확인하기"
            android:textSize="18dp"
            android:fontFamily="@font/notosansbold"
            android:drawableRight="@drawable/shop_resize"/>

    </LinearLayout>


</LinearLayout>