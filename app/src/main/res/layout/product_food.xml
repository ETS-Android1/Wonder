<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Home_product.Product_food">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/product_tea"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:background="@drawable/ar_btn_selector"
            android:textSize="15dp"
            android:fontFamily="@font/notosansregular"
            android:textColor="#000000"
            android:text="차">
        </Button>
        <Button
            android:id="@+id/product_coffee"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:background="@drawable/ar_btn_selector"
            android:textSize="15dp"
            android:fontFamily="@font/notosansregular"
            android:textColor="#000000"
            android:text="커피">

        </Button>
        <Button
            android:id="@+id/product_spice"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:background="@drawable/ar_btn_selector"
            android:textSize="15dp"
            android:fontFamily="@font/notosansregular"
            android:textColor="#000000"
            android:text="향신료">

        </Button>
        <Button
            android:id="@+id/product_oatmeal"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:background="@drawable/ar_btn_selector"
            android:textSize="15dp"
            android:fontFamily="@font/notosansregular"
            android:textColor="#000000"
            android:text="오트밀">

        </Button>
    </LinearLayout>
<LinearLayout
    android:id="@+id/food_tea_shop01"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:visibility="invisible"
    android:orientation="vertical">
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/product_shop1"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/product_background01"
            android:fontFamily="@font/notosansregular"
            android:text="알맹상점"
            android:textColor="#000000"
            android:textSize="15dp"></Button>

        <Button
            android:id="@+id/shop1_datail"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_marginLeft="110dp"
            android:background="@drawable/product_detail"
            android:fontFamily="@font/notosansregular"
            android:text="바로가기  >"
            android:textColor="#000000"
            android:textSize="15dp"></Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_marginLeft="30dp"
            android:layout_width="350dp"
            android:layout_height="660dp"
            android:background="@drawable/product_background06"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            android:textStyle="bold"
            android:lineSpacingExtra="30dp"
            android:text="아쌈홍차 ₩ 150 (1g)\n정선 수국차 ₩ 300 (1g)\n얼그레이홍차 ₩ 200 (1g)\n피나콜라다 ₩ 150 (1g)\n로즈마리 차 ₩ 200 (1g)\n페퍼민트 ₩ 200 (1g)\n초코 민트 ₩ 150 (1g)\n레몬스라스 ₩ 200 (1g)\n자스민차 ₩ 150 (1g)\n어성초 ₩ 150 (1g)\n캐모마일 ₩ 200 (1g)\n산수유차 ₩ 150 (1g)\n스리랑카산 홍차 ₩ 150 (1g)">
        </TextView>
    </LinearLayout>
</LinearLayout>
    <LinearLayout
        android:id="@+id/food_tea_shop02"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/product_shop2"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/product_background01"
            android:fontFamily="@font/notosansregular"
            android:text="채움소"
            android:textColor="#000000"
            android:textSize="15dp"></Button>

        <Button
            android:id="@+id/shop2_datail"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_marginLeft="110dp"
            android:background="@drawable/product_detail"
            android:fontFamily="@font/notosansregular"
            android:text="바로가기  >"
            android:textColor="#000000"
            android:textSize="15dp"></Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_marginLeft="30dp"
            android:layout_width="350dp"
            android:layout_height="220dp"
            android:background="@drawable/product_background01"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            android:textStyle="bold"
            android:lineSpacingExtra="30dp"
            android:text="로즈마리	₩ 120 (1g)\n루이보스	₩ 120 (1g)\n페퍼민트	₩ 120 (1g)\n카모마일	₩ 180 (1g)">
        </TextView>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>
</ScrollView>