<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home_product.Product_face">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:layout_gravity="top">
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/product_toner"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:background="#00FFFFFF"
                android:textSize="15dp"
                android:fontFamily="@font/notosansregular"
                android:textColor="#000000"
                android:text="토너">
            </Button>
            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:background="#C2c2c2"
                android:layout_gravity="center"/>
            <Button
                android:id="@+id/product_cream"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:background="#00FFFFFF"
                android:textSize="15dp"
                android:fontFamily="@font/notosansregular"
                android:textColor="#000000"
                android:text="크림">
            </Button>
            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:background="#C2c2c2"
                android:layout_gravity="center"/>
            <Button
                android:id="@+id/product_cleanser"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:background="#00FFFFFF"
                android:textSize="15dp"
                android:fontFamily="@font/notosansregular"
                android:textColor="#000000"
                android:text="클렌저">
            </Button>
            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:background="#C2c2c2"
                android:layout_gravity="center"/>
            <Button
                android:id="@+id/product_gel"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:background="#00FFFFFF"
                android:textSize="15dp"
                android:fontFamily="@font/notosansregular"
                android:textColor="#000000"
                android:text="젤">
            </Button>
            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:background="#C2c2c2"
                android:layout_gravity="center"/>
            <Button
                android:id="@+id/product_suncream"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:background="#00FFFFFF"
                android:textSize="15dp"
                android:fontFamily="@font/notosansregular"
                android:textColor="#000000"
                android:text="썬크림">
            </Button>
            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:background="#C2c2c2"
                android:layout_gravity="center"/>
            <Button
                android:id="@+id/product_oil"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:background="#00FFFFFF"
                android:textSize="15dp"
                android:fontFamily="@font/notosansregular"
                android:textColor="#000000"
                android:text="오일">
            </Button>
        </LinearLayout>
    </HorizontalScrollView>


</LinearLayout>